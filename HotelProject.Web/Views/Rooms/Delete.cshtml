@model Room
@{
    ViewData["Title"] = "ოთახის წაშლა";
}

<form asp-controller="Rooms" asp-action="DeletePOST" method="post">
    <input hidden asp-for="Id" />
    <input hidden asp-for="IsFree" />

    <div class="mb-3">
        <input class="form-control" asp-for="Name" disabled />
    </div>
    <div class="mb-3">
        <label asp-for="IsFree">დაკავებულია/არა</label>
        <input type="checkbox" asp-for="IsFree" disabled />
    </div>
    <div class="mb-3">
        <input class="form-control" asp-for="HotelId" disabled />
    </div>
    <div class="mb-3">
        <input class="form-control" asp-for="DailyPrice" disabled />
    </div>
    <div class="mb-3">
        <input type="submit" class="btn btn-danger" value="წაშლა" />
    </div>
</form>
