@model Reservation
@{
    ViewData["Title"] = "სტუმრის წაშლა";
}




<form asp-controller="Reservations" asp-action="UpdatePOST" method="post">
    <input hidden asp-for="Id" />
    <div class="mb-3">
        <label asp-for="CheckInDate">Check-in:</label>
        <input class="form-control" asp-for="CheckInDate" />
    </div>
    <div class="mb-3">
        <label asp-for="CheckOutDate">Check-Out:</label>
        <input class="form-control" asp-for="CheckOutDate" />
    </div>
    <div class="mb-3">
        <input type="submit" class="btn btn-success" value="განახლება" />
    </div>
</form>